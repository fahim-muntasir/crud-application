<form id="add_usr_form">
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
    <div class="col-10">
      <input
        type="text"
        class="form-control"
        id="inputName"
        placeholder="Enter your name"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
    <div class="col-10">
      <input
        type="email"
        class="form-control"
        id="inputEmail"
        placeholder="Email"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="address" class="col-sm-2 col-form-label">Address</label>
    <div class="col-10">
      <select class="form-control" name="address" id="address_select">
        <!-- <option value="">Select your district</option> -->
      </select>
    </div>
  </div>
  <!-- radio  -->
  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Role</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="gridRadios"
            id="role_admin"
            value="Admin"
          />
          <label class="form-check-label" for="gridRadios1"> Admin </label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="gridRadios"
            id="role_user"
            value="User"
          />
          <label class="form-check-label" for="gridRadios2"> User </label>
        </div>
      </div>
    </div>
  </fieldset>
  <!-- /radio  -->
  <button id="submit_btn" type="submit" class="btn btn-success btn-block">
    Submit
  </button>
</form>
